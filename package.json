{
  "name": "v4-auth",
  "version": "1.0.0",
  "main": "src/server.ts",
  "license": "MIT",
  "scripts": {
    "dev": "console-ninja ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "ninja": "console-ninja yarn ts-node src/server.ts",
    "lint:check": "eslint --ignore-path .eslintignore --ext .js,.ts . --format=node_modules/eslint-formatter-pretty",
    "prettier:check": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "lint:fix": "eslint . --fix --format=node_modules/eslint-formatter-pretty",
    "prettier:fix": "prettier --write .",
    "lint-prettier-fix": "yarn lint:fix && yarn prettier:fix",
    "lint-prettier-check": "yarn lint:check && yarn prettier:check --formatter=node_modules/eslint-formatter-pretty",
    "lint-prettier": "yarn lint-prettier-fix && yarn prettier:check --formatter=node_modules/eslint-formatter-pretty",
    "prod": "NODE_ENV=production nodemon server.js"
  },
  "lint-staged": {
    "src/**/*.ts": "yarn lint-prettier"
  },
  "dependencies": {
    "@colors/colors": "^1.5.0",
    "connect-mongo": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "http-status": "^1.6.2",
    "mongodb": "^5.4.0",
    "mongoose": "^7.1.1",
    "winston": "^3.9.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.21.4",
    "jsonwebtoken": "^9.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.6"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.39.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-formatter-pretty": "^5.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  }
}
